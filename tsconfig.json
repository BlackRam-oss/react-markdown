{
  "include": ["**/*.js", "**/*.jsx"],
  "exclude": ["coverage/", "node_modules/", "**/*.min.js"],
  "compilerOptions": {
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020"],
    "module": "node16",
    "newLine": "lf",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2021",
    "jsx": "preserve"
  }
}
